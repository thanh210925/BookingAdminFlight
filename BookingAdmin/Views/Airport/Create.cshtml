@model BookingAdmin.Models.Airport
@{
    ViewData["Title"] = "Thêm sân bay";
    Layout = "_Layout";
}

<div class="container mt-4">
    <h2 class="text-center fw-bold text-success mb-4">➕ Thêm sân bay mới</h2>

    <form asp-action="Create" method="post" class="shadow p-4 bg-light rounded">
        <div class="mb-3">
            <label class="form-label">Tên sân bay</label>
            <input asp-for="Name" class="form-control" placeholder="VD: Nội Bài, Tân Sơn Nhất..." required />
        </div>

        <div class="mb-3">
            <label class="form-label">Mã sân bay</label>
            <input asp-for="Code" class="form-control" placeholder="VD: HAN, SGN..." required />
        </div>

        <div class="mb-3">
            <label class="form-label">Thành phố</label>
            <input asp-for="City" class="form-control" placeholder="VD: Hà Nội, TP.HCM..." required />
        </div>

        <div class="mb-4">
            <label class="form-label">Quốc gia</label>
            <input asp-for="Country" class="form-control" placeholder="VD: Việt Nam, Thái Lan..." required />
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-primary px-4">💾 Lưu</button>
            <a asp-action="Index" class="btn btn-secondary px-4 ms-2">⬅️ Quay lại</a>
        </div>
    </form>
</div>
