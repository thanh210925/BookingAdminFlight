@model BookingAdmin.Models.Ticket
@{
    ViewData["Title"] = "Chỉnh sửa vé máy bay";
    Layout = "_LayoutTicket";
    var airlines = ViewBag.Airlines as List<BookingAdmin.Models.Airline>;
    var airports = ViewBag.Airports as List<BookingAdmin.Models.Airport>;
}

<div class="ticket-edit-bg">
    <!-- 🌈 Header -->
    <div class="text-center mb-5">
        <div style="font-size: 3rem;">📝</div>
        <h1 class="ticket-edit-title fw-bold">Chỉnh sửa vé máy bay</h1>
        <p class="ticket-edit-subtitle">Cập nhật thông tin chuyến bay trong hệ thống</p>
    </div>

    <!-- 🧾 Form -->
    @using (Html.BeginForm("Edit", "Ticket", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />

        <div class="ticket-edit-form">
            <!-- 📋 Thông tin chuyến bay -->
            <div class="mb-5">
                <h5 class="fw-bold text-warning mb-4">📋 Thông tin chuyến bay</h5>
                <div class="row g-4">
                    <div class="col-md-6">
                        <label asp-for="Airline" class="form-label fw-semibold">Hãng bay</label>
                        <select asp-for="Airline" class="form-select form-select-lg border-0 bg-light rounded-3 p-3" required>
                            <option value="" disabled>Chọn hãng bay...</option>
                            @foreach (var a in airlines)
                            {
                                <option value="@a.Name" selected="@(Model.Airline == a.Name)">
                                    @a.Name
                                </option>
                            }
                        </select>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="FlightType" class="form-label fw-semibold">Loại vé</label>
                        <select asp-for="FlightType" id="FlightType" class="form-select form-select-lg border-0 bg-light rounded-3 p-3" required>
                            <option value="Một chiều" selected="@(Model.FlightType == "Một chiều")">Một chiều</option>
                            <option value="Khứ hồi" selected="@(Model.FlightType == "Khứ hồi")">Khứ hồi</option>
                        </select>
                    </div>
                </div>
            </div>

            <!-- 🛫 Lộ trình outbound -->
            <div class="mb-5">
                <h5 class="fw-bold text-warning mb-4">🛫 Lộ trình outbound</h5>
                <div class="row g-4">
                    <div class="col-md-6">
                        <label asp-for="DepartureAirport" class="form-label fw-semibold">Điểm đi</label>
                        <select asp-for="DepartureAirport" class="form-select form-select-lg border-0 bg-light rounded-3 p-3" required>
                            <option value="" disabled>Chọn sân bay...</option>
                            @foreach (var ap in airports)
                            {
                                var value = $"{ap.Code} - {ap.City}";
                                <option value="@value" selected="@(Model.DepartureAirport == value)">
                                    @value
                                </option>
                            }
                        </select>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="ArrivalAirport" class="form-label fw-semibold">Điểm đến</label>
                        <select asp-for="ArrivalAirport" class="form-select form-select-lg border-0 bg-light rounded-3 p-3" required>
                            <option value="" disabled>Chọn sân bay...</option>
                            @foreach (var ap in airports)
                            {
                                var value = $"{ap.Code} - {ap.City}";
                                <option value="@value" selected="@(Model.ArrivalAirport == value)">
                                    @value
                                </option>
                            }
                        </select>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="DepartureDate" class="form-label fw-semibold">Ngày đi</label>
                        <input asp-for="DepartureDate" type="date" class="form-control form-control-lg border-0 bg-light rounded-3 p-3" required />
                    </div>

                    <div class="col-md-6">
                        <label asp-for="DepartureTime" class="form-label fw-semibold">Giờ đi</label>
                        <input asp-for="DepartureTime" type="time" class="form-control form-control-lg border-0 bg-light rounded-3 p-3" required />
                    </div>
                </div>
            </div>

            <!-- 🛬 Lộ trình return -->
            <div id="returnSection">
                <h5 class="fw-bold text-warning mb-4">🛬 Lộ trình return</h5>
                <div class="row g-4">
                    <div class="col-md-6">
                        <label asp-for="ReturnDate" class="form-label fw-semibold">Ngày về</label>
                        <input asp-for="ReturnDate" type="date" class="form-control form-control-lg border-0 bg-light rounded-3 p-3" />
                    </div>

                    <div class="col-md-6">
                        <label asp-for="ReturnTime" class="form-label fw-semibold">Giờ về</label>
                        <input asp-for="ReturnTime" type="time" class="form-control form-control-lg border-0 bg-light rounded-3 p-3" />
                    </div>
                </div>
            </div>

            <!-- 💺 Thông tin vé -->
            <div class="mt-5">
                <h5 class="fw-bold text-warning mb-4">💺 Thông tin vé</h5>
                <div class="row g-4">
                    <div class="col-md-6">
                        <label asp-for="SeatClass" class="form-label fw-semibold">Hạng ghế</label>
                        <select asp-for="SeatClass" class="form-select form-select-lg border-0 bg-light rounded-3 p-3" required>
                            <option value="Phổ thông" selected="@(Model.SeatClass == "Phổ thông")">Phổ thông</option>
                            <option value="Thương gia" selected="@(Model.SeatClass == "Thương gia")">Thương gia</option>
                            <option value="Hạng nhất" selected="@(Model.SeatClass == "Hạng nhất")">Hạng nhất</option>
                        </select>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Price" class="form-label fw-semibold">Giá vé (VNĐ)</label>
                        <input asp-for="Price" type="number" min="1000" step="1000" class="form-control form-control-lg border-0 bg-light rounded-3 p-3" required />
                    </div>
                </div>
            </div>
        </div>

        <!-- 🧭 Nút hành động -->
        <div class="d-flex gap-4 justify-content-center mt-5">
            <button type="submit" class="btn btn-lg fw-bold text-white shadow ticket-edit-btn-save">
                💾 Cập nhật vé
            </button>
            <a asp-action="Index" class="btn btn-lg fw-bold ticket-edit-btn-back">
                ⬅️ Quay lại
            </a>
        </div>
    }
</div>

@section Scripts {
    <script>
        const flightType = document.getElementById("FlightType");
        const returnSection = document.getElementById("returnSection");

        function toggleReturnSection() {
            if (flightType.value === "Khứ hồi") {
                returnSection.style.display = "block";
            } else {
                returnSection.style.display = "none";
            }
        }

        flightType.addEventListener("change", toggleReturnSection);
        toggleReturnSection();
    </script>
}
