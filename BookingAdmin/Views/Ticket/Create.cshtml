@model BookingAdmin.Models.Ticket
@{
    ViewData["Title"] = "Thêm vé máy bay mới";
    var airlines = ViewBag.Airlines as List<BookingAdmin.Models.Airline>;
    var airports = ViewBag.Airports as List<BookingAdmin.Models.Airport>;
}

<div class="container mt-5">
    <h2 class="fw-bold text-success mb-4 text-center">✈️ Thêm vé máy bay mới</h2>

    @using (Html.BeginForm("Create", "Ticket", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="row g-3">
            <!-- 🔹 Hãng bay -->
            <div class="col-md-6">
                <label asp-for="Airline" class="form-label fw-semibold">Hãng bay</label>
                <select asp-for="Airline" class="form-select" required>
                    <option value="" selected disabled>-- Chọn hãng bay --</option>
                    @foreach (var a in airlines)
                    {
                        <option value="@a.Name">@a.Name</option>
                    }
                </select>
                <span asp-validation-for="Airline" class="text-danger"></span>
            </div>

            <!-- 🔹 Điểm đi -->
            <div class="col-md-6">
                <label asp-for="DepartureAirport" class="form-label fw-semibold">Điểm đi</label>
                <select asp-for="DepartureAirport" class="form-select" required>
                    <option value="" selected disabled>-- Chọn sân bay đi --</option>
                    @foreach (var ap in airports)
                    {
                        <option value="@($"{ap.Code} - {ap.City}")">@($"{ap.Code} - {ap.City}")</option>
                    }
                </select>
                <span asp-validation-for="DepartureAirport" class="text-danger"></span>
            </div>

            <!-- 🔹 Điểm đến -->
            <div class="col-md-6">
                <label asp-for="ArrivalAirport" class="form-label fw-semibold">Điểm đến</label>
                <select asp-for="ArrivalAirport" class="form-select" required>
                    <option value="" selected disabled>-- Chọn sân bay đến --</option>
                    @foreach (var ap in airports)
                    {
                        <option value="@($"{ap.Code} - {ap.City}")">@($"{ap.Code} - {ap.City}")</option>
                    }
                </select>
                <span asp-validation-for="ArrivalAirport" class="text-danger"></span>
            </div>

            <!-- 🔹 Ngày đi -->
            <div class="col-md-6">
                <label asp-for="DepartureDate" class="form-label fw-semibold">Ngày đi</label>
                <input asp-for="DepartureDate" type="date" class="form-control" required />
                <span asp-validation-for="DepartureDate" class="text-danger"></span>
            </div>

            <!-- 🔹 Giờ đi -->
            <div class="col-md-6">
                <label asp-for="DepartureTime" class="form-label fw-semibold">Giờ đi</label>
                <input asp-for="DepartureTime" type="time" class="form-control" required />
                <span asp-validation-for="DepartureTime" class="text-danger"></span>
            </div>

            <!-- 🔹 Ngày về -->
            <div class="col-md-6">
                <label asp-for="ReturnDate" class="form-label fw-semibold">Ngày về (nếu có)</label>
                <input asp-for="ReturnDate" type="date" class="form-control" />
                <span asp-validation-for="ReturnDate" class="text-danger"></span>
            </div>

            <!-- 🔹 Hạng ghế -->
            <div class="col-md-6">
                <label asp-for="SeatClass" class="form-label fw-semibold">Hạng ghế</label>
                <select asp-for="SeatClass" class="form-select" required>
                    <option value="" selected disabled>-- Chọn hạng ghế --</option>
                    <option>Phổ thông</option>
                    <option>Thương gia</option>
                    <option>Hạng nhất</option>
                </select>
                <span asp-validation-for="SeatClass" class="text-danger"></span>
            </div>

            <!-- 🔹 Giá vé -->
            <div class="col-md-6">
                <label asp-for="Price" class="form-label fw-semibold">Giá vé (VNĐ)</label>
                <input asp-for="Price" type="number" class="form-control" min="1000" step="1000" placeholder="VD: 1200000" required />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
        </div>

        <div class="mt-4 text-end">
            <button type="submit" class="btn btn-success px-4 py-2 fw-semibold">💾 Lưu vé</button>
            <a asp-action="Index" class="btn btn-secondary px-4 py-2 fw-semibold">⬅️ Quay lại</a>
        </div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
