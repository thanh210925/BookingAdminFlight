@model BookingAdmin.Models.Ticket
@{
    ViewData["Title"] = "Xóa vé máy bay";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-danger text-white text-center rounded-top-4">
            <h3 class="fw-bold mb-0">🗑 Xóa vé máy bay</h3>
        </div>

        <div class="card-body bg-light">
            <div class="alert alert-warning border-warning shadow-sm p-4 rounded-3">
                <h5 class="fw-bold mb-3 text-danger">
                    ⚠️ Bé có chắc muốn xóa vé này không?
                </h5>

                <div class="row">
                    <div class="col-md-6">
                        <p><strong>✈️ Hãng bay:</strong> @Model.Airline</p>
                        <p><strong>🏙 Điểm đi:</strong> @Model.DepartureAirport</p>
                        <p><strong>📍 Điểm đến:</strong> @Model.ArrivalAirport</p>
                        <p><strong>📆 Ngày đi:</strong> @Model.DepartureDate</p>
                        <p><strong>⏰ Giờ đi:</strong> @Model.DepartureTime</p>
                    </div>

                    <div class="col-md-6">
                        @if (!string.IsNullOrEmpty(Model.ReturnDate))
                        {
                            <p><strong>📅 Ngày về:</strong> @Model.ReturnDate</p>
                            <p><strong>⏱ Giờ về:</strong> @Model.ReturnTime</p>
                        }
                        <p><strong>💺 Hạng ghế:</strong> @Model.SeatClass</p>
                        <p><strong>💰 Giá vé:</strong> @String.Format("{0:N0} VNĐ", Model.Price)</p>
                        <p>
                            <strong>🧾 Loại vé:</strong>
                            @(Model.FlightType == "Khứ hồi" ? "Khứ hồi" : "Một chiều")
                        </p>
                    </div>
                </div>
            </div>

            <form asp-action="DeleteConfirmed" method="post" class="text-center mt-4">
                <input type="hidden" asp-for="Id" />

                <button type="submit" class="btn btn-danger px-4 py-2 fw-semibold me-2">
                    🗑 Xóa vé
                </button>
                <a asp-action="Index" class="btn btn-secondary px-4 py-2 fw-semibold">
                    ⬅️ Hủy bỏ
                </a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Xác nhận lại 1 lần nữa trước khi xóa
        document.querySelector("form").addEventListener("submit", function (e) {
            if (!confirm("⚠️ Bé có chắc chắn muốn xóa vé này không? Hành động này không thể hoàn tác!")) {
                e.preventDefault();
            }
        });
    </script>
}
