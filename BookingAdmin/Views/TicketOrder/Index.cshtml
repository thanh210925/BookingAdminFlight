@model IEnumerable<BookingAdmin.Models.TicketOrder>
@{
    ViewData["Title"] = "Quản lý Đơn hàng Vé";
    Layout = "_Layout";
}

<div class="container mt-4">
    <h2 class="fw-bold text-primary text-center mb-4">🎟️ Quản lý Đơn hàng Vé</h2>

    <div class="card shadow border-0 rounded-4 p-3">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-primary">
                <tr>
                    <th>Khách hàng</th>
                    <th>Hãng bay</th>
                    <th>Chặng</th>
                    <th>Ngày đi</th>
                    <th>Ngày về</th>
                    <th>Ghế</th>
                    <th>Hạng</th>
                    <th>Tổng tiền (₫)</th>
                    <th>Trạng thái</th>
                    <th>Thanh toán</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var o in Model)
                {
                    <tr>
                        <td>
                            <div class="fw-bold">@o.FullName</div>
                            <div class="text-muted">@o.Email</div>
                        </td>
                        <td>@o.Airline</td>
                        <td>@o.Departure → @o.Destination</td>
                        <td>@o.DepartureDate</td>
                        <td>@o.ReturnDate</td>
                        <td>
                            <small class="text-muted">Đi:</small> @string.Join(", ", o.DepartureSeats ?? new List<string>())<br />
                            <small class="text-muted">Về:</small> @string.Join(", ", o.ReturnSeats ?? new List<string>())
                        </td>
                        <td>@o.SeatClass</td>
                        <td>@o.TotalPrice.ToString("N0")</td>
                        <td>
                            <form asp-action="UpdateStatus" method="post" class="d-flex">
                                <input type="hidden" name="id" value="@o.Id" />
                                <select name="status" class="form-select form-select-sm">
                                    <option selected>@o.Status</option>
                                    <option>Đã xác nhận</option>
                                    <option>Đang xử lý</option>
                                    <option>Đã hủy</option>
                                </select>
                                <button type="submit" class="btn btn-sm btn-success ms-1">💾</button>
                            </form>
                        </td>
                        <td>
                            @if (!string.IsNullOrEmpty(o.PaymentImageUrl))
                            {
                                <a href="@o.PaymentImageUrl" target="_blank">
                                    <img src="@o.PaymentImageUrl" style="width:60px;height:60px;object-fit:cover;border-radius:8px;" />
                                </a>
                            }
                            else
                            {
                                <span class="text-muted">Không có</span>
                            }
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@o.Id" class="btn btn-sm btn-info">🔍</a>
                            <a asp-action="Delete" asp-route-id="@o.Id" class="btn btn-sm btn-danger">🗑️</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
