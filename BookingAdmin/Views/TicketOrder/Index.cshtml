@model IEnumerable<BookingAdmin.Models.TicketOrder>
@{
    ViewData["Title"] = "Quản lý Đơn hàng Vé";
    Layout = "_Layout";
}

<div class="container mt-4">
    <h2 class="fw-bold text-primary text-center mb-4">🎟️ Quản lý Đơn hàng Vé</h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <div class="card shadow border-0 rounded-4 p-3">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-primary">
                <tr>
                    <th>Khách hàng</th>
                    <th>Hãng bay</th>
                    <th>Chặng</th>
                    <th>Ngày đi</th>
                    <th>Ghế</th>
                    <th>Hạng</th>
                    <th>Tổng tiền (₫)</th>
                    <th>Trạng thái</th>
                    <th>Thanh toán</th>
                    <th>Thao tác</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var o in Model)
                {
                    <tr>
                        <!-- ======= KHÁCH HÀNG ======= -->
                        <td>
                            <div class="fw-bold">@o.PassengerName</div>
                            <div class="text-muted">@o.Email</div>
                            <div class="badge bg-secondary">Booking: @o.BookingId</div>
                        </td>

                        <!-- ======= HÃNG ======= -->
                        <td>@o.Airline</td>

                        <!-- ======= CHẶNG BAY ======= -->
                        <td>@o.Departure → @o.Destination</td>

                        <!-- ======= NGÀY BAY ======= -->
                        <td>@o.Date</td>

                        <!-- ======= GHẾ ======= -->
                        <td>
                            @o.Seat
                        </td>


                        <!-- ======= HẠNG ======= -->
                        <td>@o.SeatClass</td>

                        <!-- ======= TỔNG TIỀN ======= -->
                        <td>@o.TotalPrice.ToString("N0")</td>

                        <!-- ======= CẬP NHẬT TRẠNG THÁI CHUNG BOOKING ======= -->
                        <td>
                            <form asp-action="UpdateStatusByBooking" method="post" class="d-flex">

                                <!-- BookingId để cập nhật toàn bộ vé -->
                                <input type="hidden" name="bookingId" value="@o.BookingId" />

                                <select name="status" class="form-select form-select-sm">
                                    <option selected>@o.Status</option>
                                    <option>Đã xác nhận</option>
                                    <option>Đang xử lý</option>
                                    <option>Đã hủy</option>
                                </select>

                                <button type="submit" class="btn btn-sm btn-success ms-1">💾</button>
                            </form>
                        </td>

                        <!-- ======= ẢNH THANH TOÁN ======= -->
                        <td>
                            @if (!string.IsNullOrEmpty(o.PaymentImageUrl))
                            {
                                <a href="@o.PaymentImageUrl" target="_blank">
                                    <img src="@o.PaymentImageUrl"
                                         style="width:60px;height:60px;object-fit:cover;border-radius:8px;" />
                                </a>
                            }
                            else
                            {
                                <span class="text-muted">Không có</span>
                            }
                        </td>

                        <!-- ======= THAO TÁC ======= -->
                        <td>
                            <a asp-action="Details" asp-route-id="@o.Id" class="btn btn-sm btn-info">🔍</a>
                            <a asp-action="Delete" asp-route-id="@o.Id" class="btn btn-sm btn-danger">🗑️</a>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>
