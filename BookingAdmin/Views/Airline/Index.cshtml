@model IEnumerable<BookingAdmin.Models.Airline>
@{
    ViewData["Title"] = "Quản lý Hãng bay";
}

<div class="container mt-4">
    <h2 class="fw-bold text-primary mb-3">✈️ Danh sách Hãng bay</h2>

    <div class="text-end mb-3">
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Thêm Hãng bay
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">Chưa có hãng bay nào.</div>
    }
    else
    {
        <table class="table table-hover shadow-sm">
            <thead class="table-primary text-center">
                <tr>
                    <th>Tên hãng</th>
                    <th>Mã</th>
                    <th>Quốc gia</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody class="text-center">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Code</td>
                        <td>@item.Country</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">✏️</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm"
                               onclick="return confirm('Xóa hãng bay này?');">🗑️</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
