@model BookingAdmin.Models.Airline
@{
    ViewData["Title"] = "Xóa hãng bay";
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <h2 class="fw-bold text-danger">⚠️ Xác nhận xóa hãng bay</h2>
        <p class="text-muted">Bạn có chắc chắn muốn xóa hãng bay này không? Hành động này không thể hoàn tác.</p>
    </div>

    <div class="card border-danger shadow-sm rounded-4 p-4">
        <dl class="row mb-4">
            <dt class="col-sm-3 fw-bold">Tên hãng</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3 fw-bold">Mã hãng</dt>
            <dd class="col-sm-9">@Model.Code</dd>

            <dt class="col-sm-3 fw-bold">Quốc gia</dt>
            <dd class="col-sm-9">@Model.Country</dd>

            <dt class="col-sm-3 fw-bold">Số hàng ghế</dt>
            <dd class="col-sm-9">@Model.SeatRows</dd>

            <dt class="col-sm-3 fw-bold">Số ghế mỗi hàng</dt>
            <dd class="col-sm-9">@Model.SeatCols</dd>
        </dl>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="text-center mt-4">
                <button type="submit" class="btn btn-danger px-4"
                        onclick="return confirm('Bạn có chắc chắn muốn xóa hãng bay này không?')">
                    🗑️ Xóa ngay
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary px-4 ms-2">
                    ⬅️ Quay lại danh sách
                </a>
            </div>
        </form>
    </div>
</div>
