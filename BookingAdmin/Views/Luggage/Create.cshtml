@model BookingAdmin.Models.Luggage

@{
    ViewData["Title"] = "Thêm hành lý mới";
}

<div class="container mt-5">
    <h2 class="text-center text-success fw-bold mb-4">➕ Thêm hành lý mới</h2>

    <form asp-action="Create" method="post" class="card shadow p-4 mx-auto" style="max-width: 600px;">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="mb-3">
            <label asp-for="Name" class="form-label fw-bold"></label>
            <input asp-for="Name" class="form-control" placeholder="VD: Hành lý 20kg" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Weight" class="form-label fw-bold"></label>
            <input asp-for="Weight" type="number" class="form-control" placeholder="VD: 20" />
            <span asp-validation-for="Weight" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Price" class="form-label fw-bold"></label>
            <input asp-for="Price" type="number" class="form-control" placeholder="VD: 300000" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label fw-bold"></label>
            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Mô tả hành lý"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-end mt-4">
            <button type="submit" class="btn btn-success me-2">💾 Lưu hành lý</button>
            <a asp-action="Index" class="btn btn-secondary">⬅️ Quay lại</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
